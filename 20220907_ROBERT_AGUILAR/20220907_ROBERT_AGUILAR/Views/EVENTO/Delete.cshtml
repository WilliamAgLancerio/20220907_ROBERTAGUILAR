@model _20220907_ROBERT_AGUILAR.EVENTO

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ELIMINAR</h2>
<h4>EVENTO</h4>

<div>
    <h3>¿ESTA SEGURO DE QUERE ELIMINAR ESTE EVENTO?</h3>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            INSTITUCIÓN:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre_institucion)
        </dd>

        <dt>
            DIRECCIÓN:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.direccion)
        </dd>

        <dt>
            ALUMNOS:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad_alumnos)
        </dd>

        <dt>
            HORA DE INICIO:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.hora_inicio)
        </dd>

        <dt>
            TIPO DE SERVICIO:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tipo_servicio)
        </dd>

        <dt>
            VALOR DEL SERVICIO:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.valor_servicio)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="ELIMINAR" class="btn btn-default" /> |
            @Html.ActionLink("REGRESAR", "Index")
        </div>
    }
</div>
